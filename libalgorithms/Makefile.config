ARCH=64

#Pakiety kompilacyjne wraz z ich konfiguracjÄ…
ASM=nasm
LD=gcc
CC=gcc
CURRENT_DIR=$(shell pwd)

LIBALGORITHMS_INCLUDE=$(CURRENT_DIR)/include

#weryfikacja architektury
ASMFLAGS=-f elf64 -g
ifeq ($(TESTENABLED),1)
	LDFLAGS=-lc -m64 -Wall -g3 -lm -lpthread
	CFLAGS=-c -m64 -Wall -g3 -I$(LIBALGORITHMS_INCLUDE) -D_GNU_SOURCE -msse4.2
else
	LDFLAGS=-lc -m64 -Wall -g3 -lm -shared -lpthread
	CFLAGS=-c -m64 -Wall -g3 -I$(LIBALGORITHMS_INCLUDE) -D_GNU_SOURCE -fPIC -msse4.2
endif
#konfiguracja budowania
OBJDIR=.
