ARCH=64

#Pakiety kompilacyjne wraz z ich konfiguracjÄ…
ASM=nasm
LD=gcc
CC=gcc

#Library configuration
SQLLITE_LIB=sqlite/.libs/libsqlite3.so
LIBALGORITHMS_LIB=libalgorithms/libalgorithms.so
LIBALGORITHMS_INCLUDE=libalgorithms/include
SQLLITE_INCLUDE=sqlite
OTHER_LIBS=-lpcap -lssl -lcrypto

#weryfikacja architektury
ASMFLAGS=-f elf64 -g
LDFLAGS=-lc -m64 -lpthread -Wall -g $(SQLLITE_LIB) $(LIBALGORITHMS_LIB) $(OTHER_LIBS)
CFLAGS=-c -m64 -Wall -g -I$(SQLLITE_INCLUDE) -I$(LIBALGORITHMS_INCLUDE) -D_GNU_SOURCE
#konfiguracja budowania
OBJDIR=.
